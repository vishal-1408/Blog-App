<%- include("partials/header") %>

<div class="ui container segment main text" id="cont">
  <div class="ui header huge">NEW BLOG</div>
  <form class="ui form" action="/blog" method="post">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" placeholder="Title" required>
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" placeholder="Image Url" required>
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[body]" required></textarea>
    </div>
    <button class="ui blue big basic button">Submit</button>
  </form>
</div>
